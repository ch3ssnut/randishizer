{% extends 'base.html.twig' %}

{% block title %}Hello DishesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container mt-5">
    <div class="row">
        {% for dish in dishes %}
            <div class="dish col-2 border mx-2 py-2 mb-3">
                <div class="dish__name">
                    {{dish.name}}
                </div>
                <div class="dish__type">
                    {{dish.type}}
                </div>
                <div class="dish__edit">
                    <a href="{{ path('edit_dishes', {'id':dish.id}) }}" class="btn btn-outline-primary btn-sm">Edit</a>
                    <a href="{{ path('remove_dishes', {'id':dish.id}) }}" class="btn btn-outline-danger btn-sm">Delete</a>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="row">
        {{form_start(form, {'attr': {'class': 'col-3 mx-2 mt-4 py-3 px-4 border form'}}) }}
        
            {{ form_label(form.name, 'Add new dish:', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(form.type, 'Select type:', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
            {{ form_widget(form.Submit, {'attr': {'class': 'mt-3 btn btn-primary'}}) }}
        {{form_end(form)}}
    </div>
</div>
{% endblock %}
