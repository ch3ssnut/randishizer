{% extends 'base.html.twig' %}

{% block title %}Edit Dishes{% endblock %}

{% block body %}
<style>
</style>

<div class="container mt-5">
    <div class="row">
        <div class="d-flex justify-content-between">
            <div class="fs-3">
                {{dish.name}}
            </div>
            <div class="">
                <a href="{{path('dishes')}}" class="btn btn-primary">back</a>
            </div>
        </div>
    </div>

    <div class="row">
        
        
        <div class="col-4">
            {{form_start(users_ingredient_form, {'attr': {'class': 'mx-auto py-3 px-4 border form'}}) }}
            <div class="">
                {{ form_label(users_ingredient_form.Ingredient, 'Add new ingredient:', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(users_ingredient_form.Ingredient, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="">
                {{ form_label(users_ingredient_form.unit, 'Unit:', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(users_ingredient_form.unit, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="d-flex mt-4">
                {{ form_widget(users_ingredient_form.Submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
            {{form_end(users_ingredient_form)}}
        </div>
        <div class="col-4">
            {{form_start(form, {'attr': {'class': 'mx-auto py-3 px-4 border form'}}) }}
            <div class="">
                {{ form_label(form.name, 'Name:', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-select'}}) }}
            </div>
            <div class="">
                {{ form_label(form.ammount, 'Ammount:', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.ammount, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="d-flex justify-content-between mt-4">
                <div class="">
                    {{ form_widget(form.Submit, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                <div class="">
                    {{ form_widget(form.Remove, {'attr': {'class': 'btn btn-danger'}})}}
                </div>
            </div>
            {{form_end(form)}}
        </div>
        <div class="col-4">
            <ul class="list-group">
                {% for ing in ingredients %}
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <div class="">
                                {{ing.name}} {{ing.ammount}} {{ing.unit}}
                            </div>
                            <div class="">
                                <a href="{{ path('remove_ingredinet', {'id': dish.id, 'ing_id': ing.id}) }}" class="btn btn-danger btn-sm">
                                    Remove
                                </a>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
        
    </div>
</div>
{% endblock %}
