{% extends 'base.html.twig' %}

{% block title %}Hello SpreadsheetController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
        {{form_start(form, {'attr': {'class': 'col-4 mx-auto mt-5 py-3 px-4 border form'}}) }}
            {{ form_label(form.Number_of_days, 'Number of Days:', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.Number_of_days, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(form.Number_of_shopping_days, 'Shopping list days summed up:', {'label_attr': {'class': 'form-label mt-3'}}) }}
            {{ form_widget(form.Number_of_shopping_days, {'attr': {'class': 'form-control'}}) }}
            {{ form_widget(form.Submit, {'attr': {'class': 'mt-3 btn btn-primary'}}) }}
        {{form_end(form)}}

</div>
{% endblock %}
